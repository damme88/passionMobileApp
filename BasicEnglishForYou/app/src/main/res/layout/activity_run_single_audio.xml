<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.passionpham_eng88.basicenglishforyou.RunSingleAudioActivity"
    android:id="@+id/singleAudio">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.google.android.gms.ads.AdView>
    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/singleAudioBack"
        android:background="@drawable/custombutton"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:text="Exit"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/singleAudioPlay"
        android:background="@drawable/custombutton"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:text="Play"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/singleAudioBack"
        android:layout_toEndOf="@+id/singleAudioBack"
        android:layout_margin="5dp"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/singleAudioStop"
        android:background="@drawable/custombutton"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:text="Stop"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/singleAudioPlay"
        android:layout_toEndOf="@+id/singleAudioPlay"
        android:layout_margin="5dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:editable="false"
        android:ems="10"
        android:id="@+id/editText"
        android:textSize="12dp"
        android:textStyle="italic"
        android:layout_above="@+id/singleAudioBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show content"
        android:textSize="12dp"
        android:id="@+id/cbShowText"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/singleAudioStop"
        android:layout_toEndOf="@+id/singleAudioStop"
        android:layout_margin="5dp"/>

</RelativeLayout>
