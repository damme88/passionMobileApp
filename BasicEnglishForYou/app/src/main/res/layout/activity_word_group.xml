<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.passionpham_eng88.basicenglishforyou.WordGroupActivity">
    <ListView
        android:id="@+id/wgListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wgBack"
        android:verticalScrollbarPosition="left"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_below="@+id/adViewWg">
    </ListView>
    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/wgBack"
        android:layout_margin="5dp"
        android:text="Exit"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/custombutton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/wgPlayAll"
        android:layout_margin="5dp"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:text="Run All"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/custombutton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/wgBack"
        android:layout_toEndOf="@+id/wgBack" />

    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/wgStopAll"
        android:layout_margin="5dp"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:text="Stop"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/custombutton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/wgPlayAll"
        android:layout_toEndOf="@+id/wgPlayAll" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewWg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_above="@+id/liBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
