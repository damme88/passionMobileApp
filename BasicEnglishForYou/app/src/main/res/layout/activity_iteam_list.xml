<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.passionpham_eng88.basicenglishforyou.IteamListActivity">
    <ListView
        android:id="@+id/commonListview"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:verticalScrollbarPosition="left"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/adViewItemList">
    </ListView>
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/commonBack"
        android:background="@drawable/exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/commonPlayAll"
        android:background="@drawable/playall"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/commonBack"
        android:layout_toEndOf="@+id/commonBack" />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/commonStopAll"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/stop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/commonPlayAll"
        android:layout_toEndOf="@+id/commonPlayAll" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewItemList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_above="@+id/menuBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
